class Settings():
    '''储存《alien—invasion》所有设置'''

    def __init__(self):
        '''初始化游戏设置'''
        #屏幕设置
        self.screen_width = 500
        self.screen_height = 500
        self.bg_color = (200,200,200)

        #飞船的速度
        self.ship_speed_factor = 1.5

        #子弹设置
        self.bullet_speed_factor = 1
        self.bullet_width = 3
        self.bullet_height = 15
        self.bullet_color = (60,60,60)
